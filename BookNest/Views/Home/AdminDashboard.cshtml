@model BookNest.ViewModels.AdminDashboardViewModel

<h2>Admin Dashboard</h2>

@if (TempData["SuccessMessage"] != null)

{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)

{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Users</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)

        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<h3 class="mt-5 mb-3">Add/Modify Books</h3>
<form asp-action="AddBook" method="post" class="mb-4">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required />
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" required />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" required min="1" />
    </div>
    <button type="submit" class="btn btn-primary">Add Book</button>
</form>


<h3>Books</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Is Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)

        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.IsAvailable</td>
                <td>
                    @if (book.IsAvailable)
                    {
                        <form asp-action="IssueBook" method="post">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <input type="date" name="returnDate" required />
                            <button type="submit" class="btn btn-primary">Issue Book</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Check Restrictions</h3>
<form asp-action="CheckRestrictions" method="post">
    <button type="submit" class="btn btn-warning">Check Restrictions</button>
</form>
