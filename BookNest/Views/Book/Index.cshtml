@model IEnumerable<BookNest.Models.Book>
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

<div class="container mt-5">
    <h2 class="mb-4">Book List</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Quantity</td>
                    <td>
                        @if (ViewBag.IsAdmin)

                        {
                            <!-- অ্যাডমিনের জন্য আপডেট এবং মুছে ফেলার অপশন -->
                            <button type="button" class="btn btn-primary" onclick="confirmUpdate(@book.Id, '@book.Title', '@book.Author', @book.Quantity)">Update</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete(@book.Id)">Delete</button>
                        }

                        else

                        {
                            <!-- সাধারণ ব্যবহারকারীদের জন্য বই ইস্যু বা স্টক আউট চেক -->
                            @if (book.Quantity > 0)
                            {
                                <form asp-action="RequestIssue" method="post" id="requestForm-@book.Id">
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <div class="form-row align-items-center">
                                        <div class="col-auto">
                                            <label class="sr-only" for="returnDate">Return Date:</label>
                                            <input type="date" class="form-control mb-2" name="returnDate" required />
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-primary mb-2" onclick="submitRequest(@book.Id)">Request Issue</button>
                                        </div>
                                    </div>
                                </form>
                                <div id="pendingButton-@book.Id" style="display: none;">
                                    <button class="btn btn-warning mb-2" disabled>Pending</button>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>Out of Stock</button>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Popup Modal for Return Book Reminder -->
<div class="modal fade" id="returnReminderModal" tabindex="-1" role="dialog" aria-labelledby="returnReminderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="returnReminderModalLabel">Return Book Reminder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Please return your previous book before issuing a new one.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function confirmUpdate(bookId, title, author, quantity) {
            $('#updateBookId').val(bookId);
            $('#updateTitle').val(title);
            $('#updateAuthor').val(author);
            $('#updateQuantity').val(quantity);
            $('#updateConfirmationModal').modal('show');
        }

        function confirmDelete(bookId) {
            $('#deleteBookId').val(bookId);
            $('#deleteConfirmationModal').modal('show');
        }

        function submitRequest(bookId) {
            var form = $('#requestForm-' + bookId);
            var returnDate = form.find('input[name="returnDate"]').val();
            if (!returnDate) {
                alert('Please select a return date.');
                return;
            }

            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function () {
                    form.replaceWith('<button class="btn btn-warning mb-2" disabled>Pending</button>');
                },
                error: function (xhr, status, error) {
                    if (xhr.responseText === "Please return your previous book before issuing a new one.") {
                        $('#returnReminderModal').modal('show');
                    } else {
                        alert('There was an error processing your request.');
                    }
                }
            });
        }
    </script>
}
