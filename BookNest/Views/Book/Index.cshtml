@model IEnumerable<BookNest.Models.Book>
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

<div class="container mt-5">
    <h2 class="mb-4">Book List</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Quantity</td>
                    <td>
                        @if (book.Quantity > 0)

                        {
                            <form asp-action="RequestIssue" method="post">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <div class="form-row align-items-center">
                                    <div class="col-auto">
                                        <label class="sr-only" for="returnDate">Return Date:</label>
                                        <input type="date" class="form-control mb-2" name="returnDate" required />
                                    </div>
                                    <div class="col-auto">
                                        <label class="sr-only" for="returnTime">Return Time:</label>
                                        <input type="time" class="form-control mb-2" name="returnTime" required />
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" class="btn btn-primary mb-2">Request Issue</button>
                                    </div>
                                </div>
                            </form>
                        }

                        else

                        {
                            <button class="btn btn-secondary" disabled>Out of Stock</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
